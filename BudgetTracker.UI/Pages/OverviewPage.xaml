<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetTracker.UI.Pages.OverviewPage"
             Title="Overview">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="ProfileTbi" Text="Profile" Order="Secondary" Priority="1"/>
        <ToolbarItem x:Name="SettingsTbi" Text="Settings" Order="Secondary" Priority="2" Clicked="SettingsTbi_Clicked"/>
        <ToolbarItem x:Name="ExitTbi" Text="Exit" Order="Secondary" Priority="2" Clicked="ExitTbi_Clicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        
        <VerticalStackLayout
            BackgroundColor="Cyan"
            VerticalOptions="Center">

            <Label
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Button Text="TEST"></Button>

        </VerticalStackLayout>
    </ScrollView>
    
    
</ContentPage>